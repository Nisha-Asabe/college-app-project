<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".aboutus"
        android:orientation="vertical"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>

                <ImageView
                    android:layout_width="242dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/logo"></ImageView>

                <TextView
                    android:layout_weight="1"
                    android:lineHeight="25dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.1"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#C205E3"
                    android:text="Government Residence Women Polytechnic,Tasgaon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>


        </TableLayout>

        <TextView
            android:fontFamily="sans-serif-black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Contact Us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TableLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/logo"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:lineHeight="25dp"
                    android:text="02346250447"
                    android:textColor="#000000"
                    android:textSize="30dp"></TextView>
            </TableRow>
            <TableRow>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/logo"></ImageView>
                <TextView
                    android:layout_weight="1"
                    android:lineHeight="25dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.1"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:text="grwptasgaon.dte@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/logo"></ImageView>
                <TextView
                    android:layout_weight="1"
                    android:lineHeight="25dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.1"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:textColor="#000000"
                    android:text="Tasgaon
Manerajuri Road, Tasgaon, Dist: Sangli ( M.S.)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Have any Query ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/name"
            android:background="@drawable/custom_edittext"
            android:hint="Your name"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:padding="15dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <EditText
            android:id="@+id/message"
            android:background="@drawable/custom_edittext"
            android:hint="message"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:padding="15dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <Button
            android:layout_marginBottom="30dp"
            android:id="@+id/msg_send_btn"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:padding="20dp"
            android:text="Send"
            android:textSize="20dp"
            ></Button>
    </LinearLayout>
</ScrollView>